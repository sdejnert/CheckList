<Window x:Class="CheckList.CheckBoxMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckList"
        mc:Ignorable="d"
        Title="CheckBoxMainWindow" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Button x:Name="SignoutButton" Content="Wyloguj" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="SignoutButton_Click"/>
        <DataGrid x:Name ="CheckBoxMainWindowDataGrid"  HorizontalAlignment="Left" Height="359" Margin="10,35,0,0" VerticalAlignment="Top" Width="761" SelectionChanged="DataGrid_SelectionChanged" Grid.ColumnSpan="4">
            <DataGridTextColumn Header="ID" Binding="{Binding Taskid}"/>
            <DataGridTextColumn Header="Nazwa zadania" Binding="{Binding name}"/>
            <DataGridTextColumn Header="Opis" Binding="{Binding opis}"/>
        </DataGrid>

    </Grid>
</Window>
